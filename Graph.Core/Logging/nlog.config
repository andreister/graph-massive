<?xml version="1.0" encoding="utf-8" ?>
<nlog>
	<variable name="logDirectory" value="${basedir}\Logs"/>
	<variable name="verbose" value="${longdate} | ${threadid:padding=-3} | ${level:uppercase=true:padding=-5} | ${logger:padding=-60} | ${message}"/>
	<targets>
		<target name="file-all"   type="File" fileName="${logDirectory}\${date:format=yyyyMMdd}.log" layout="${verbose}" />
		<target name="file"       type="File" fileName="${logDirectory}\${level}_${date:format=yyyyMMdd}.log" layout="${verbose}" />
		<target name="console"    type="ColoredConsole" layout="${message}" />
	</targets>
	<rules>
		<logger name="Graph.Tools.DataLoader.*" writeTo="console" />
		<logger name="*" minlevel="Debug" writeTo="file-all" />
		<logger name="*" minlevel="Info" writeTo="file" />
	</rules>
</nlog>